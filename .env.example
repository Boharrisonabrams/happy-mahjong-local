# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/mahjong_db

# Replit Authentication (required for auth)
REPLIT_DOMAINS=your-repl-domain.replit.dev
ISSUER_URL=https://replit.com/oidc
REPL_ID=your-repl-id
SESSION_SECRET=your-session-secret-key-here

# Server Configuration
PORT=5000
NODE_ENV=development

# Object Storage Configuration (for file uploads)
PUBLIC_OBJECT_SEARCH_PATHS=/bucket-name/public
PRIVATE_OBJECT_DIR=/bucket-name/private

# Feature Flags (optional)
ANALYTICS_ENABLED=true
BILLING_ENABLED=false