# Local Development Configuration
# Copy this to .env and update with your actual values

# Database Configuration (keep Neon for now - works locally)
DATABASE_URL=your-neon-database-url-here

# Local Server Configuration
PORT=5000
NODE_ENV=development

# Session Configuration (generate a secure secret)
SESSION_SECRET=your-super-secure-session-secret-at-least-32-characters-long

# Local Authentication (temporary - will be replaced)
# These are placeholder values for development
REPLIT_DOMAINS=localhost:5000
ISSUER_URL=https://replit.com/oidc
REPL_ID=local-development

# File Storage Configuration
# For local development, we'll use local file system
PUBLIC_OBJECT_SEARCH_PATHS=/uploads/public
PRIVATE_OBJECT_DIR=/uploads/private

# Feature Flags
ANALYTICS_ENABLED=false
BILLING_ENABLED=false

# Local Development Flags
LOCAL_DEV_MODE=true
DISABLE_REPLIT_AUTH=true